<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/show_season_item_card_view"
    android:layout_margin="5dp"
    android:layout_marginBottom="20dp"
    card_view:cardBackgroundColor="@color/color_bg_card"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="@dimen/dim_elevation_cv"
    card_view:contentPadding="0dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/season_item_num"
            android:textSize="@dimen/dim_crew_item_name"
            android:textColor="@color/color_crew_text"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/season_item_eps"
            android:textSize="@dimen/dim_crew_item_name_character"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/show_seasons_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_keyboard_right_arrow_button"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>